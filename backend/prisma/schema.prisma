generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  teacher
  principal
  superadmin
}

model School {
  id      Int      @id @default(autoincrement())
  name    String
  city    String?
  classes Class[]
  users   User[]
  invites Invite[]
}

model Class {
  id       Int      @id @default(autoincrement())
  name     String
  schoolId Int
  school   School   @relation(fields: [schoolId], references: [id])
  users    User[]
  quizzes  Quiz[]
  invites  Invite[]
}

model User {
  id       Int          @id @default(autoincrement())
  name     String
  email    String       @unique
  password String
  role     Role
  classId  Int?
  class    Class?       @relation(fields: [classId], references: [id])
  schoolId Int?
  school   School?      @relation(fields: [schoolId], references: [id])
  xp       Int          @default(0)
  answers  QuizAnswer[]
}

model Invite {
  id        Int      @id @default(autoincrement())
  email     String
  role      Role
  schoolId  Int
  classId   Int?
  token     String   @unique
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
  school    School   @relation(fields: [schoolId], references: [id])
  class     Class?   @relation(fields: [classId], references: [id])
}

model Quiz {
  id        BigInt       @id @default(autoincrement())
  title     String
  classId   Int
  class     Class        @relation(fields: [classId], references: [id])
  questions Question[]
  answers   QuizAnswer[]
}

model Question {
  id      BigInt   @id @default(autoincrement())
  text    String
  quizId  BigInt
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  choices Choice[]
}

model Choice {
  id         BigInt   @id @default(autoincrement())
  text       String
  isCorrect  Boolean
  questionId BigInt
  question   Question @relation(fields: [questionId], references: [id])
}

model QuizAnswer {
  id        BigInt   @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  quizId    BigInt
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  xpEarned  Int
  correct   Boolean
  createdAt DateTime @default(now())
}
