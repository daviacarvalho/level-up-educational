generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  teacher
  principal
}

model School {
  id      Int     @id @default(autoincrement())
  name    String
  city    String?
  classes Class[]
}

model Class {
  id       Int    @id @default(autoincrement())
  name     String
  schoolId Int
  school   School @relation(fields: [schoolId], references: [id])
  users    User[]
  quizzes  Quiz[]
}

model User {
  id       Int          @id @default(autoincrement())
  name     String
  email    String       @unique
  password String
  role     Role
  classId  Int? // FK para turma (aluno)
  class    Class?       @relation(fields: [classId], references: [id])
  answers  QuizAnswer[]
}

model Quiz {
  id        BigInt       @id @default(autoincrement())
  title     String
  classId   Int
  class     Class        @relation(fields: [classId], references: [id])
  questions Question[]
  answers   QuizAnswer[]
}

model Question {
  id      BigInt   @id @default(autoincrement())
  text    String
  quizId  BigInt
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  choices Choice[]
}

model Choice {
  id         BigInt   @id @default(autoincrement())
  text       String
  isCorrect  Boolean
  questionId BigInt
  question   Question @relation(fields: [questionId], references: [id])
}

model QuizAnswer {
  id        BigInt   @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  quizId    BigInt
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  xpEarned  Int
  correct   Boolean
  createdAt DateTime @default(now())
}
